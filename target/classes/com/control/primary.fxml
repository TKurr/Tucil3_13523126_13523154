<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.control.MainController">
    <Label text="Rush Hour Solver" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="5" alignment="CENTER">
        <TextField fx:id="widthField" promptText="Width" />
        <TextField fx:id="heightField" promptText="Height" />
        <TextField fx:id="goalField" promptText="Goal (x, y)"/>
    </HBox>
    <HBox spacing="5" alignment="CENTER">
        <Label text="Algoritma : "/>
        <ComboBox fx:id="algorithmBox" prefWidth="150"/>
        <Label text="Heuristic : "/>
        <ComboBox fx:id="heuristicBox" prefWidth="150"/>
    </HBox>
<!--  -->
    <HBox spacing="10" alignment="CENTER">
        <TextArea fx:id="boardInput" promptText="Paste board here" prefRowCount="6" prefColumnCount="10"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Draw Board" onAction="#handleDrawBoard"/>
        <Button fx:id="solveButton" text="Solve" onAction="#solvePuzzle"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER"> 
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" prefHeight="250">
            <content>
                <GridPane fx:id="boardGrid" />
            </content>
        </ScrollPane>
        <VBox spacing="10">
            <Label fx:id="resultLabel"/>
            <Label fx:id="moveLabel"/>
            <Label fx:id="timeLabel"/>
            <Button fx:id="saveButton" text="Save"/>
        </VBox>
    </HBox>
</VBox>